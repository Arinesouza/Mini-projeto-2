import java.util.Scanner;

public class Capitulo{
    String nome;
    String texto;
    Times times;
    int animação;
    String[] escolhas;
    Scanner escolha;


    Capitulo(String nome,
             String texto,
             Times times,
             int animação,
             String[] escolhas,
             Scanner escolha)
    {
            this.nome = nome;
            this.texto = texto;
            this.times = times;
            this.animação = animação;
            this.escolhas = escolhas;
            this.escolha = escolha;

    }


    void mostrar()
    {
        System.out.println(this.nome);
        System.out.println(this.texto);
        this.times.animação(this.animação);
    

     if(this.escolhas != null ){

        for(String esc : escolhas){
            System.out.println(" - " +esc);
        }
    }
    
    }
        
        int winlose()
    {
        int escolh=-1;
        if(escolhas!=null){
        while(escolh == -1){
            System.out.print(" ");
            String pes = escolha.nextLine();

        for(int i=0;i<escolhas.length;i++){
            
            if(pes.equals(escolhas[i])){
                escolh = i;

            }
        }
       
      }
      

        }
        return escolh;
    }
    
}  
