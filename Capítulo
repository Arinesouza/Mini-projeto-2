import java.util.ArrayList;
import java.util.Scanner;

public class Capitulo{
    String nome;
    String texto;
    Times times;
    int animação;
    ArrayList<Escolha> escolhas;
    Scanner escolha;


    Capitulo(String nome,
             String texto,
             Times times,
             int animação,
             Scanner escolha)
    {
            this.nome = nome;
            this.texto = texto;
            this.times = times;
            this.animação = animação;
            this.escolha = escolha;
            this.escolhas = new ArrayList<Escolha>();

    }


    void mostrar()
    {
        System.out.println(this.nome);
        System.out.println(this.texto);
        this.times.animação(this.animação);
    

     if(this.escolhas.size() > 0 ){

        for(Escolha esc : escolhas){
            System.out.println(" - " +esc.texto);
        }
        int escolh = winlose();
        this.escolhas.get(escolh).proximo.mostrar();
    }
    
    }
        
        int winlose()
    {
        int escolh=-1;
        if(escolhas!=null){
        while(escolh == -1){
            System.out.print(" ");
            String pes = escolha.nextLine();

        for(int i=0;i<escolhas.size();i++){
            
            if(pes.equals(escolhas.get(i).texto))
            {
                escolh = i;

            }
        }
       
      }
      

        }
        return escolh;
    }
    
}  



    

    

    
    
    

    


